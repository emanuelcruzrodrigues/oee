<project name="OEE-Server" basedir="." default="deploy" >
	<property file="./build.properties" />
	
	<property name="src.dir" value="../src"/>
	<property name="lib.dir" value="../lib"/>
	<property name="resources.dir" value="../resources"/>
	<property name="web.dir" value="../web"/>
	<property name="orm.dir" value="../orm"/>
	<property name="build.dir" value="ant-build"/>
	<property name="dist.dir" value="../dist"/>
	<property name="xsd.dir" value="../ws/xsd"/>
		
    <path id="classpath">
		<fileset dir="${deploy.dir}/server.war/WEB-INF/lib" includes="**/*.jar"/>
	</path>
	
    <target name="clean">
        <delete dir="${build.dir}"/>
	    <delete dir="${dist.dir}"/>
    </target>
    
    <target name="clean-all">
        <antcall target="clean"/>
	    <delete dir="${deploy.dir}"/>
    </target>
    
    <target name="deploy">
		
		<echo message="criando META-INF" />
		<mkdir dir="${deploy.dir}/META-INF" />
		<copy todir="${deploy.dir}/META-INF">
			<fileset dir="META-INF" includes="**/*" />
		</copy>
		
		<antcall target="generate-dist"/>
		<echo message="Copiando jars gerado" />
		<copy todir="${deploy.dir}/server.war/WEB-INF/lib">
			<fileset dir="${dist.dir}" includes="**/*" />
		</copy>
		       	
	    <echo message="Copiando arquivos de configuracao" />
		<copy todir="${deploy.dir}/server.war/WEB-INF/">
			<fileset dir="${resources.dir}" includes="**/*" />
		</copy>
		
	    <echo message="Copiando arquivos hbm" />
		<copy todir="${deploy.dir}/server.war/WEB-INF/classes/orm">
			<fileset dir="${orm.dir}" includes="**/*" />
		</copy>
	    
		<echo message="Copiando arquivos web" />
		<copy todir="${deploy.dir}/server.war/">
		  <fileset dir="${web.dir}">
		    <include name="**/*"/>
		  </fileset>
		</copy>
		
		<echo message="Copiando schemas" />
		<copy todir="${deploy.dir}/server.war/WEB-INF/schemas/xsd">
			<fileset dir="${xsd.dir}" includes="**/*" />
		</copy>
		
	</target>
    
    <target name="generate-dist">
    	
    	<antcall target="compile"/>
    	
    	<mkdir dir="${dist.dir}"/>
        <jar destfile="${dist.dir}/oee.jar" basedir="${build.dir}">
        	<manifest>
        	   <attribute name="Permissions"   value="all-permissions"/>
        	   <attribute name="Codebase"      value="*"/>
        	</manifest>
        </jar>
    </target>
	
    <target name="compile" >
        
        <echo message="Copiando libs para formacao do classpath" />
        <mkdir dir="${deploy.dir}/server.war/WEB-INF/lib" />
		<copy todir="${deploy.dir}/server.war/WEB-INF/lib">
			<fileset dir="${lib.dir}" includes="**/*">
				<exclude name="*junit*.jar"/>
				<exclude name="*mockito*.jar"/>
			</fileset>
		</copy>
		
    	<mkdir dir="${build.dir}"/>
        <javac srcdir="${src.dir}" destdir="${build.dir}" classpathref="classpath" debug="true" />
    	
    	<copy todir="${build.dir}">
    		<fileset dir="${src.dir}" includes="oee.properties" />
    	</copy>
        
    </target>    
	
</project>